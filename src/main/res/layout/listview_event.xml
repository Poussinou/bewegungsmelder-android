<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#444" >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#373737" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/tvTitle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/iv_favorite"
            android:textColor="#ffffee" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/iv_favorite"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/rating_favorite"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:id="@+id/tvLocation"
            android:layout_below="@+id/tvTitle"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tvTimeStart"
            android:textColor="#ffffee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="00:00"
            android:id="@+id/tvTimeStart"
            android:layout_below="@+id/tvTitle"
            android:layout_alignParentRight="true"
            android:textColor="#ffffee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5â‚¬"
            android:id="@+id/tvPrice"
            android:layout_below="@+id/tvLocation"
            android:layout_toLeftOf="@+id/tvTimeEntry"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="00:00"
            android:id="@+id/tvTimeEntry"
            android:layout_below="@+id/tvTimeStart"
            android:layout_alignLeft="@+id/tvTimeStart"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="#ffffee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/tvDescription"
            android:layout_below="@+id/tvTimeEntry"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:layout_alignRight="@+id/tvTimeStart"
            android:textColor="#ffffee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Links"
            android:id="@+id/tvLinks"
            android:layout_below="@+id/tvDescription"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffee" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableBands"
            android:layout_below="@+id/tvLinks"
            android:layout_alignParentLeft="true"></TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description Extra"
            android:id="@+id/tvDescriptionExtra"
            android:layout_below="@+id/tableBands"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textColor="#ffffee" />

    </RelativeLayout>
</FrameLayout>